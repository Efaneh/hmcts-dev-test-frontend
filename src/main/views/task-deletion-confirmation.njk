{% extends "template.njk" %}

{% block content %}
  <h1 class="govuk-heading-l">Are you sure you want to delete Task {{ taskId }}?</h1>

  <form action="/task/{{ taskId }}/delete" method="POST">
    <button type="submit" class="govuk-button govuk-button--warning">
      Yes, delete this task
    </button>
  </form>

  <a href="/task/{{ taskId }}" class="govuk-link">Cancel and go back</a>
{% endblock %}
